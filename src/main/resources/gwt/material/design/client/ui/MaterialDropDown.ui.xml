<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:c="urn:import:gwt.material.design.client.custom">
	<ui:style>
		.dropdown{
			height: initial !important;
		}
		.dropdown li{
			display: block;
			padding: 1rem 1rem;
			color: #26a69a;
		}
		.fixed{
			position: fixed;
		}
		.fixed i{
			line-height: inherit !important;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.fixed}">
		<m:MaterialButton ui:field="anchor" width="100%" addStyleNames='dropdown-button' icon="mdi-navigation-arrow-drop-down" iconPosition="right"/>
		<m:UnorderedList ui:field="list" addStyleNames='dropdown-content {style.dropdown}' />

	</g:HTMLPanel>
</ui:UiBinder> 